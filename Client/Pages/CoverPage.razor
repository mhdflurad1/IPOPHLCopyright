@code {
    private bool isHeaderFixed;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializeFixedHeader", DotNetObjectReference.Create(this));
        }
    }

    [JSInvokable]
    public void UpdateHeaderClass(double scrollPosition)
    {
        isHeaderFixed = scrollPosition > 10;
        StateHasChanged();
    }
}

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    private string GetMenuClass()
    {
        return isMenuOpen ? "menu open" : "menu";
    }
}

@code {
    private async Task RedirectToExternalUrl(string url)
    {
        await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
    }
    private async Task toCopyrightForm()
    {
        string externalUrl = "/";
        await RedirectToExternalUrl(externalUrl);
    }
}
